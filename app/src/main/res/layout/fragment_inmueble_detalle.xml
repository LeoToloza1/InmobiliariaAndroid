<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Inmuebles.InmuebleDetalleFragment">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Direccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DirecciÃ³n"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/imagen"
        app:layout_constraintStart_toStartOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="@id/imagen"
        android:layout_marginTop="16dp"
        android:enabled="false" />

    <EditText
        android:id="@+id/Precio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/Direccion"
        app:layout_constraintStart_toStartOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="@id/imagen"
        android:layout_marginTop="8dp"
        android:enabled="false" />

    <EditText
        android:id="@+id/TipoInmueble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tipo"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/Precio"
        app:layout_constraintStart_toStartOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="@id/imagen"
        android:layout_marginTop="8dp"
        android:enabled="false" />

    <EditText
        android:id="@+id/Uso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Uso"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/TipoInmueble"
        app:layout_constraintStart_toStartOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="@id/imagen"
        android:layout_marginTop="8dp"
        android:enabled="false" />

    <EditText
        android:id="@+id/Ambientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ambientes"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/Uso"
        app:layout_constraintStart_toStartOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="@id/imagen"
        android:layout_marginTop="8dp"
        android:enabled="false" />

    <Switch
        android:id="@+id/EstadoSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Disponible"
        app:layout_constraintStart_toStartOf="@id/imagen"
        app:layout_constraintTop_toBottomOf="@id/Ambientes" />


    <EditText
        android:id="@+id/Descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripcion"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/EstadoSwitch"
        app:layout_constraintStart_toStartOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="@id/imagen"
        android:layout_marginTop="8dp"
        android:enabled="false" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        app:layout_constraintTop_toBottomOf="@id/Descripcion"
        app:layout_constraintStart_toStartOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="@id/imagen"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
